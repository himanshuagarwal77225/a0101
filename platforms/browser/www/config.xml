<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gcreationz.lovestatus" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Love Status</name>
    <description>Love Status</description>
    <author email="support@phonegap.com" href="http://www.gcreationz.com/">GCreationz</author>
    <content src="index.html" />
    <gap:platform name="android" />
    <gap:platform name="ios" />
    <gap:platform name="winphone" />
    <gap:plugin name="cordova-plugin-device-orientation" source="npm" />
    <gap:plugin name="cordova-plugin-dialogs" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-customurlscheme" source="npm">
        <param name="URL_SCHEME" value="lovestatusapp" />
        <param name="HTTP_HOST" value="www.lovestatus.org" />
        <param name="HTTP_PATHPREFIX" value="www.lovestatus.org" />
        <param name="HTTPS_HOST" value="www.lovestatus.org" />
        <param name="HTTPS_PATHPREFIX" value="www.lovestatus.org" />
    </gap:plugin>
    <gap:config-file parent="/manifest/application" platform="android">
        <activity android:launchMode="singleTop" />
    </gap:config-file>
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <icon src="icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/drawable-ldpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/drawable-mdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/drawable-hdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/drawable-xhdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icon/android/drawable-xxhdpi/ic_launcher.png" />
    <icon gap:platform="ios" height="180" src="res/icon/ios/Icon-60@3x.png" width="180" />
    <icon gap:platform="ios" height="60" src="res/icon/ios/Icon-60.png" width="60" />
    <icon gap:platform="ios" height="120" src="res/icon/ios/Icon-60@2x.png" width="120" />
    <icon gap:platform="ios" height="76" src="res/icon/ios/Icon-76.png" width="76" />
    <icon gap:platform="ios" height="152" src="res/icon/ios/Icon-76@2x.png" width="152" />
    <icon gap:platform="ios" height="29" src="res/icon/ios/Icon-Small.png" width="29" />
    <icon gap:platform="ios" height="58" src="res/icon/Icon-Small@2x.png" width="58" />
    <icon gap:platform="ios" height="40" src="res/icon/ios/Icon-40.png" width="40" />
    <icon gap:platform="ios" height="80" src="res/icon/ios/Icon-40@2x.png" width="80" />
    <icon gap:platform="ios" height="57" src="res/icon/ios/Icon.png" width="57" />
    <icon gap:platform="ios" height="114" src="res/icon/ios/Icon@2x.png" width="114" />
    <icon gap:platform="ios" height="72" src="res/icon/ios/Icon-72.png" width="72" />
    <icon gap:platform="ios" height="144" src="res/icon/ios/Icon-72@2x.png" width="144" />
    <icon gap:platform="ios" height="50" src="res/icon/ios/Icon-50.png" width="50" />
    <icon gap:platform="ios" height="100" src="res/icon/ios/Icon-50@2x.png" width="100" />
    <icon gap:platform="webos" src="res/icon/logo_64.png" />
    <icon gap:platform="winphone" src="res/icon/android/drawable-mdpi/ic_launcher.png" />
    <icon gap:platform="winphone" gap:role="background" src="res/icon/logo_173.png" />
    <gap:splash src="default.png" />
    <gap:splash gap:platform="ios" height="480" src="img/ios/default.png" width="320" />
    <gap:splash gap:platform="ios" height="960" src="res/screen/ios/default@2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1136" src="img/ios/default-568h@2x.png" width="640" />
    <gap:splash gap:platform="ios" height="1334" src="img/ios/default-667h@2x.png" width="750" />
    <gap:splash gap:platform="ios" height="2208" src="img/ios/default-portrait-736h@3x.png" width="1242" />
    <gap:splash gap:platform="ios" height="1242" src="img/ios/default-landscape-736h@3x.png" width="2208" />
    <gap:splash gap:platform="ios" height="1024" src="img/ios/default-portrait.png" width="768" />
    <gap:splash gap:platform="ios" height="768" src="img/ios/default-landscape.png" width="1024" />
    <gap:splash gap:platform="ios" height="2048" src="img/ios/default-portrait@2x.png" width="1536" />
    <gap:splash gap:platform="ios" height="1536" src="img/ios/default-landscape@2x.png" width="2048" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="phonegap-version" value="cli-6.3.0" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-installLocation" value="auto" />
    <preference name="FadeSplashScreenDuration" value="10" />
</widget>
